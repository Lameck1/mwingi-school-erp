{
  "name": "mwingi-school-erp",
  "version": "1.0.0",
  "description": "School Accounting & ERP Desktop Application for Mwingi Adventist School",
  "main": "dist-electron/main/index.js",
  "type": "module",
  "author": "Mwingi Adventist School",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:vite": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "set ELECTRON_RUN_AS_NODE=&& vite",
    "electron:build": "npm run build:vite && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:eslint:strict": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:strict": "npm run lint:eslint",
    "lint:architecture": "depcruise --config .dependency-cruiser.cjs \"src/**/*.ts\" \"src/**/*.tsx\" \"electron/**/*.ts\" --output-type err-long",
    "lint:deps": "npm audit --audit-level=high",
    "lint:md": "npx markdownlint-cli \"**/*.md\" --ignore node_modules",
    "lint:md:fix": "npx markdownlint-cli \"**/*.md\" --ignore node_modules --fix",
    "lint:quality": "npm run lint:eslint:strict && npm run lint:architecture && npm run lint:md",
    "lint:quality:full": "npm run lint:quality && npm run lint:deps",
    "lint:all": "npm run lint:quality",
    "lint:all:fix": "npm run lint:fix && npm run lint:md:fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.11.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3-multiple-ciphers": "^12.6.2",
    "clsx": "^2.1.0",
    "cmdk": "^1.1.1",
    "date-fns": "^3.2.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "csv-parse": "^6.1.0",
    "exceljs": "^4.4.0",
    "keytar": "^7.9.0",
    "lucide-react": "^0.303.0",
    "nodemailer": "^7.0.13",
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "recharts": "^2.10.3",
    "tailwind-merge": "^2.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/csv-parse": "^1.1.12",
    "@types/exceljs": "^0.5.3",
    "@types/jest": "^30.0.0",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "better-sqlite3": "^12.6.2",
    "dependency-cruiser": "^17.3.8",
    "electron": "^40.1.0",
    "electron-builder": "^26.6.0",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.6",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3",
    "vite": "^6.4.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.mwingi.school.erp",
    "productName": "Mwingi School ERP",
    "copyright": "Copyright Â© 2025 Mwingi Adventist School",
    "cscLink": null,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "forceCodeSigning": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.education"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mwingi School ERP"
    }
  },
  "overrides": {
    "@isaacs/brace-expansion": "5.0.1",
    "@electron/get": "3.1.0",
    "unzipper": "^0.12.3",
    "archiver": "^7.0.1",
    "test-exclude": "^7.0.1"
  }

}
