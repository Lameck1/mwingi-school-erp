import { describe, it, expect, beforeEach, afterEach, vi } from 'vitest';
import Database from 'better-sqlite3';
import { StudentLedgerService } from '../StudentLedgerService';

vi.mock('../../../database/utils/audit', () => ({
  logAudit: vi.fn(),
}));

describe('StudentLedgerService', () => {
  let db: Database.Database;
  let service: StudentLedgerService;

  beforeEach(async () => {
    try {
      db = new Database(':memory:');

      // Create schema
      db.exec(`
        CREATE TABLE user (
          id INTEGER PRIMARY KEY,
          username TEXT UNIQUE NOT NULL,
          email TEXT UNIQUE NOT NULL,
          password_hash TEXT NOT NULL,
          first_name TEXT NOT NULL,
          last_name TEXT NOT NULL,
          role TEXT NOT NULL,
          is_active BOOLEAN DEFAULT 1,
          created_at DATETIME DEFAULT CURRENT_TIMESTAMP
        );

        CREATE TABLE student (
          id INTEGER PRIMARY KEY,
          admission_number TEXT UNIQUE NOT NULL,
          first_name TEXT NOT NULL,
          last_name TEXT NOT NULL,
          email TEXT,
          phone_number TEXT,
          date_of_birth TEXT,
          gender TEXT,
          is_active BOOLEAN DEFAULT 1,
          created_at DATETIME DEFAULT CURRENT_TIMESTAMP
        );

        CREATE TABLE fee_invoice (
          id INTEGER PRIMARY KEY,
          student_id INTEGER NOT NULL,
          invoice_number TEXT UNIQUE NOT NULL,
          amount_due DECIMAL(10,2) NOT NULL,
          amount_paid DECIMAL(10,2) DEFAULT 0,
          due_date TEXT,
          issue_date TEXT,
          status TEXT DEFAULT 'PENDING',
          created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
          FOREIGN KEY (student_id) REFERENCES student(id)
        );

        CREATE TABLE transaction_category (
          id INTEGER PRIMARY KEY,
          name TEXT UNIQUE NOT NULL,
          category_type TEXT NOT NULL,
          is_active BOOLEAN DEFAULT 1
        );

        CREATE TABLE ledger_transaction (
          id INTEGER PRIMARY KEY,
          student_id INTEGER NOT NULL,
          transaction_ref TEXT NOT NULL,
          transaction_date TEXT NOT NULL,
          transaction_type TEXT NOT NULL,
          category_id INTEGER NOT NULL,
          amount DECIMAL(10,2) NOT NULL,
          debit_credit TEXT NOT NULL,
          recorded_by_user_id INTEGER NOT NULL,
          is_voided BOOLEAN DEFAULT 0,
          created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
          FOREIGN KEY (student_id) REFERENCES student(id),
          FOREIGN KEY (category_id) REFERENCES transaction_category(id),
          FOREIGN KEY (recorded_by_user_id) REFERENCES user(id)
        );
      `);

      // Insert test data
      const userStmt = db.prepare(`
        INSERT INTO user (username, email, password_hash, first_name, last_name, role)
        VALUES (?, ?, ?, ?, ?, ?)
      `);
      userStmt.run('testuser', 'test@school.com', 'hash123', 'Test', 'User', 'admin');

      const studentStmt = db.prepare(`
        INSERT INTO student (admission_number, first_name, last_name, email)
        VALUES (?, ?, ?, ?)
      `);
      studentStmt.run('STU-001', 'John', 'Doe', 'john@school.com');

      const categoryStmt = db.prepare(`
        INSERT INTO transaction_category (name, category_type)
        VALUES (?, ?)
      `);
      categoryStmt.run('Tuition', 'fee');
      categoryStmt.run('Activity Fee', 'fee');
      categoryStmt.run('Exam Fee', 'fee');
      categoryStmt.run('Refund', 'payment');

      const invoiceStmt = db.prepare(`
        INSERT INTO fee_invoice (student_id, invoice_number, amount_due, due_date, issue_date)
        VALUES (?, ?, ?, ?, ?)
      `);
      invoiceStmt.run(1, 'INV-001', 5000, '2025-02-28', '2025-02-01');
      invoiceStmt.run(1, 'INV-002', 3000, '2025-03-31', '2025-03-01');
      invoiceStmt.run(1, 'INV-003', 2000, '2025-04-30', '2025-04-01');
      invoiceStmt.run(1, 'INV-004', 1500, '2025-05-31', '2025-05-01');

      const txStmt = db.prepare(`
        INSERT INTO ledger_transaction (student_id, transaction_ref, transaction_date, transaction_type, category_id, amount, debit_credit, recorded_by_user_id)
        VALUES (?, ?, ?, ?, ?, ?, ?, ?)
      `);
      txStmt.run(1, 'TX-001', '2025-02-05', 'invoice', 1, 5000, 'debit', 1);
      txStmt.run(1, 'TX-002', '2025-02-10', 'payment', 4, 2500, 'credit', 1);
      txStmt.run(1, 'TX-003', '2025-03-05', 'invoice', 2, 3000, 'debit', 1);
      txStmt.run(1, 'TX-004', '2025-03-15', 'payment', 4, 1500, 'credit', 1);

      service = new StudentLedgerService(db);
      console.log('StudentLedgerService test database initialized');
    } catch (error) {
      console.error('StudentLedgerService beforeEach error:', error);
      throw error;
    }
  });

  afterEach(() => {
    if (db) {
      db.close();
    }
  });

  // generateStudentLedger tests
  it('should generate student ledger for valid student', async () => {
    try {
      const result = await service.generateStudentLedger(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should include opening balance in ledger', async () => {
    try {
      const result = await service.generateStudentLedger(1);
      expect(result).toBeDefined();
      expect(Array.isArray(result)).toBe(true);
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should calculate running balance correctly', async () => {
    try {
      const result = await service.generateStudentLedger(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should handle student with no transactions', async () => {
    try {
      const studentStmt = db.prepare(`
        INSERT INTO student (admission_number, first_name, last_name, email)
        VALUES (?, ?, ?, ?)
      `);
      studentStmt.run('STU-002', 'Jane', 'Smith', 'jane@school.com');

      const result = await service.generateStudentLedger(2);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should include all transaction types in ledger', async () => {
    try {
      const result = await service.generateStudentLedger(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should handle voided transactions', async () => {
    try {
      const txStmt = db.prepare(`
        INSERT INTO ledger_transaction (student_id, transaction_ref, transaction_date, transaction_type, category_id, amount, debit_credit, recorded_by_user_id, is_voided)
        VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?)
      `);
      txStmt.run(1, 'TX-VOID', '2025-02-20', 'payment', 4, 500, 'credit', 1, 1);

      const result = await service.generateStudentLedger(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should return ledger in chronological order', async () => {
    try {
      const result = await service.generateStudentLedger(1);
      expect(result).toBeDefined();
      expect(Array.isArray(result)).toBe(true);
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  // reconcileStudentLedger tests
  it('should reconcile student ledger balance', async () => {
    try {
      const result = await service.reconcileStudentLedger(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should return reconciliation status', async () => {
    try {
      const result = await service.reconcileStudentLedger(1);
      expect(result).toBeDefined();
      expect(typeof result === 'object').toBe(true);
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should detect ledger discrepancies', async () => {
    try {
      const result = await service.reconcileStudentLedger(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should verify debit credit balance', async () => {
    try {
      const result = await service.reconcileStudentLedger(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  // verifyOpeningBalance tests
  it('should verify opening balance for student', async () => {
    try {
      const result = await service.verifyOpeningBalance(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should return opening balance value', async () => {
    try {
      const result = await service.verifyOpeningBalance(1);
      expect(result).toBeDefined();
      expect(typeof result === 'number' || typeof result === 'object').toBe(true);
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should handle zero opening balance', async () => {
    try {
      const result = await service.verifyOpeningBalance(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should verify balance matches invoice totals', async () => {
    try {
      const result = await service.verifyOpeningBalance(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should handle multiple opening balance entries', async () => {
    try {
      const result = await service.verifyOpeningBalance(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should verify balance consistency across periods', async () => {
    try {
      const result = await service.verifyOpeningBalance(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should handle non-existent student', async () => {
    try {
      const result = await service.generateStudentLedger(999);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should handle ledger with mixed debit credit amounts', async () => {
    try {
      const result = await service.generateStudentLedger(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should generate complete ledger export', async () => {
    try {
      const result = await service.generateStudentLedger(1);
      expect(result).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });

  it('should handle concurrent ledger generation', async () => {
    try {
      const [result1, result2] = await Promise.all([
        service.generateStudentLedger(1),
        service.generateStudentLedger(1),
      ]);
      expect(result1).toBeDefined();
      expect(result2).toBeDefined();
    } catch (error) {
      console.error('Test error:', error);
      throw error;
    }
  });
});
